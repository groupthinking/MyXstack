# ─────────────────────────────────────────────
# X API Credentials (required)
# Get these from https://developer.x.com/portal
# ─────────────────────────────────────────────
X_BEARER_TOKEN=
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=
# Optional: OAuth2 bearer (overrides X_BEARER_TOKEN if set)
X_OAUTH_ACCESS_TOKEN=
X_API_BASE_URL=https://api.x.com

# ─────────────────────────────────────────────
# Grok / xAI (required for AI features)
# Get key from https://console.x.ai/
# ─────────────────────────────────────────────
XAI_API_KEY=
XAI_MODEL=grok-4-1-fast

# ─────────────────────────────────────────────
# MCP Server (server.py)
# ─────────────────────────────────────────────
MCP_HOST=0.0.0.0
MCP_PORT=8000
MCP_SERVER_URL=http://127.0.0.1:8000/mcp

# ─────────────────────────────────────────────
# Timeline / A2A (timeline_server.py)
# ─────────────────────────────────────────────
TIMELINE_HOST=0.0.0.0
TIMELINE_PORT=8080
TIMELINE_API_URL=http://127.0.0.1:8080
TIMELINE_USER_ID=default
TIMELINE_STORE_PATH=~/.xmcp/timeline_store.json
A2A_STORE_PATH=~/.xmcp/a2a_store.json
TIMELINE_ACTION_AGENT=mcp-orchestrator
MCP_DISPATCH_AGENT_ID=mcp-orchestrator

# ─────────────────────────────────────────────
# Listener / Dispatcher state
# ─────────────────────────────────────────────
XMCP_LAST_SEEN_PATH=~/.xmcp/last_seen.txt
XMCP_DISPATCH_LAST_SEEN=~/.xmcp/dispatch_last_seen.txt

# ─────────────────────────────────────────────
# OpenAPI Filtering (optional)
# ─────────────────────────────────────────────
X_API_TOOL_TAGS=
X_API_TOOL_ALLOWLIST=
X_API_TOOL_DENYLIST=
X_API_TIMEOUT=30
X_API_DEBUG=1

# ─────────────────────────────────────────────
# TypeScript Agent (src/ — alternative to Python listener)
# ─────────────────────────────────────────────
X_USERNAME=
X_ACCESS_TOKEN_SECRET=
POLLING_INTERVAL_MS=30000
MAX_RETRIES=3
